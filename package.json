{
  "name": "@mknz/vue-mfe-wrapper",
  "version": "0.1.0",
  "private": false,
  "description": "A Vue.js wrapper framework for micro-frontend architecture",
  "type": "module",
  "main": "./dist/vue-mfe-wrapper.umd.cjs",
  "module": "./dist/vue-mfe-wrapper.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/vue-mfe-wrapper.js",
      "require": "./dist/vue-mfe-wrapper.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "demo": "vite --config vite.demo.config.ts",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "peerDependencies": {
    "vue": "^3.3.0",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@mknz/vue-mfe-feature-a": "link:../vue-mfe-feature-a",
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node18": "^18.2.2",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^18.18.13",
    "@vitejs/plugin-vue": "^4.5.1",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "jsdom": "^22.1.0",
    "npm-run-all2": "^6.1.1",
    "prettier": "^3.0.3",
    "typescript": "~5.2.0",
    "vite": "^5.0.5",
    "vitest": "^1.0.1",
    "vue-tsc": "^1.8.25"
  },
  "keywords": [
    "vue",
    "typescript",
    "micro-frontend",
    "wrapper",
    "framework"
  ],
  "author": "mknz",
  "license": "MIT"
}
