{
  "name": "@mknz/vue-mfe-wrapper",
  "version": "0.1.0",
  "private": false,
  "description": "A Vue.js wrapper framework for micro-frontend architecture",
  "type": "module",
  "main": "./dist/vue-mfe-wrapper.umd.cjs",
  "module": "./dist/vue-mfe-wrapper.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "vue-mfe": "./bin/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/vue-mfe-wrapper.js",
      "require": "./dist/vue-mfe-wrapper.umd.cjs"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.10.5",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.5.1",
    "jsdom": "^23.0.1",
    "npm-run-all2": "^6.1.1",
    "typescript": "~5.3.0",
    "vite": "^5.0.10",
    "vitest": "^1.0.4",
    "vue": "^3.3.0",
    "vue-tsc": "^1.8.25"
  },
  "keywords": [
    "vue",
    "typescript",
    "micro-frontend",
    "wrapper",
    "framework"
  ],
  "author": "mknz",
  "license": "MIT"
}
